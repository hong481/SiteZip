<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="kr.co.hongstudio.sitezip.ui.screen.place.PlacesHolder.ViewModel" />

        <variable
            name="viewHolder"
            type="kr.co.hongstudio.sitezip.ui.screen.place.PlacesHolder" />

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:focusableInTouchMode="false"
        app:cardBackgroundColor="@color/color_ffffff"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{viewHolder.item.place_name}"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginStart="50dp"
                tools:text="Place Name" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:text="@{viewHolder.item.distance}"
                android:textSize="12sp"
                android:visibility="@{viewHolder.item.distance == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="@+id/tv_place_name"
                app:layout_constraintStart_toEndOf="@id/tv_place_name"
                app:layout_constraintTop_toTopOf="@id/tv_place_name"
                tools:text="200m" />

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{viewHolder.item.category_name}"
                android:textSize="10sp"
                android:visibility="@{viewHolder.item.category_name == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toStartOf="@+id/btn_open_link"
                app:layout_constraintStart_toStartOf="@id/tv_place_name"
                app:layout_constraintTop_toBottomOf="@id/tv_place_name"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tv_road_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/road_address"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/tv_category_name"
                app:layout_constraintTop_toBottomOf="@id/tv_category_name" />

            <TextView
                android:id="@+id/tv_road_address_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{viewHolder.item.road_address_name}"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_road_address"
                app:layout_constraintEnd_toStartOf="@+id/btn_open_link"
                app:layout_constraintStart_toEndOf="@id/tv_road_address"
                app:layout_constraintTop_toTopOf="@id/tv_road_address"
                tools:text="road address" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/address"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/tv_place_name"
                app:layout_constraintTop_toBottomOf="@id/tv_road_address" />

            <TextView
                android:id="@+id/tv_address_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{viewHolder.item.address_name}"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_address"
                app:layout_constraintEnd_toStartOf="@+id/btn_open_link"
                app:layout_constraintStart_toEndOf="@id/tv_address"
                app:layout_constraintTop_toTopOf="@id/tv_address"
                tools:text="address" />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/phone_number"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="@{viewHolder.phoneNumber == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toStartOf="@id/tv_place_name"
                app:layout_constraintTop_toBottomOf="@id/tv_address" />

            <TextView
                android:id="@+id/tv_phone_number_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{viewHolder.phoneNumber}"
                android:textSize="12sp"
                android:visibility="@{viewHolder.phoneNumber == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="@id/tv_phone_number"
                app:layout_constraintEnd_toStartOf="@+id/btn_open_link"
                app:layout_constraintStart_toEndOf="@id/tv_phone_number"
                app:layout_constraintTop_toTopOf="@id/tv_phone_number"
                tools:text="서울특별시" />

            <Button
                android:id="@+id/btn_open_link"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:contentDescription="@string/content_description"
                android:drawableTop="@drawable/ic_baseline_place_24"
                android:drawableTint="@color/color_ffc107"
                android:onClick="@{() -> viewModel.intentPlacePage(viewHolder.item.place_url)}"
                android:text="@string/view_details"
                android:textColor="@color/color_ffc107"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</layout>